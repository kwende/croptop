<Window x:Class="CropTop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CropTop"
        mc:Ignorable="d"
        Title="Crop Top" Height="580" Width="580" ResizeMode="NoResize">
    <StackPanel>
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="Open..." x:Name="OpenItem" Click="OpenItem_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <Image MouseUp="Image_MouseUp" HorizontalAlignment="Left" VerticalAlignment="Top" Width="512" Height="512" x:Name="Image"/>
    </StackPanel>
</Window>
